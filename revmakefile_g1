main = main_test.f90

#lib and other stuff to include to the compiler 
incs = -I /usr/local/Cellar/fftw/3.3.8_1/include/ -ffree-line-length-none
libs = -L /usr/local/Cellar/fftw/3.3.8_1/lib/ -lfftw3_omp -lfftw3 -lm \
       -L/Users/gullo/Software/heasoft-6.26.1/x86_64-apple-darwin18.7.0/lib/ \
       -lXSFunctions -lcfitsio -lXSModel -lXSUtil -lXS
       #-lwcs-5.16 -lCCfits_2.5 -lhdsp_2.9 -ltcl8.6 

optimization = -O3
debug        = -Wall -pedantic

# set compilers
fcomp = gfortran $(optimization) $(debug) 
ccomp = gcc      $(optimization) 

# the files to compile 
FCODE = $(main) srevtrans.f90
CCODE = relmodels.c rellp.c relbase.c reltable.c relutility.c donthcomp.c xilltable.c relcache.c

mod:
	$(fcomp) $(incs) $(libs) -c amodules.f90
fobj: $(FCODE)
	$(fcomp) -c $(FCODE)
cobj: 
	$(ccomp) -c $(CCODE)

compile: mod fobj cobj
	 $(fcomp) -fno-second-underscore -fno-automatic -fPIC $(incs) $(libs) *.o -o reltrans

run: clean compile clean 

clean:
	rm -vf *.o *.mod *~ subroutines/*~
