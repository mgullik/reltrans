	-L/usr/local/shared/heasoft-6.27/x86_64-pc-linux-gnu-libc2.27/lib \
	-lXSFunctions -lXSModel -lXSUtil -lXS -lCCfits_2.5 -lcfitsio \
	-o exe *.o

